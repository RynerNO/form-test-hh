div.license#license
    div.license__plan-container
        div.license__plan.license__plan_selected(value="13" plan="1")
            p Licenseplan#1
            span $13 per license
        div.license__plan(value="22" plan="2")
            p Licenseplan#2
            span $22 per license
        div.license__plan(value="34" plan="3")
            p Licenseplan#3
            span $34 per license
        i
