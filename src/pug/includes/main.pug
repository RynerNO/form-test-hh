        span Number of licenses:
        select
            option(value="1") 1
            option(value="5") 5
            option(value="10") 10
            option(value="15") 15
    div.license__total
        p TOTAL: 
            span $
                span.license__total-price 13
                sup US
    a(href="/buy-plan-1-amount-1" target="__blank" class="license__btn") Buy now

    p.license__selected-plan Selected plan: #
        span 1


    